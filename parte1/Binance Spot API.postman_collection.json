		{
			"name": "Criar User Data Stream (listenKey)",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test('Status code is 200', function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"try {",
							"    const json = pm.response.json();",
							"    if (json && json.listenKey) {",
							"        pm.collectionVariables.set('listenKey', json.listenKey);",
							"        pm.environment.set('listenKey', json.listenKey);",
							"    }",
							"} catch (e) {",
							"    // ignore parse errors",
							"}"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				},
