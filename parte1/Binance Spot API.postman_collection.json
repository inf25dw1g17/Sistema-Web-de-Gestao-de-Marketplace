							"const timestamp = Date.now();\r",
							"pm.environment.set(\"timestamp\", timestamp);\r",
							"\r",
							"const queryString = `timestamp=${timestamp}`;\r",
							"\r",
							"const signature = CryptoJS.HmacSHA256(\r",
							"  queryString,\r",
							"  apiSecret\r",
							").toString(CryptoJS.enc.Hex);\r",
							"\r",
							"pm.environment.set(\"signature\", signature);\r",
